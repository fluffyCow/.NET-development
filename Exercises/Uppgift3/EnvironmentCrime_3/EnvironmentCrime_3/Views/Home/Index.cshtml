@{
    Layout = "_HomeLayout";
}

@model Errand

<h2>Välkommen att fylla i din anmälan av miljöbrott</h2>
<p class="info">I Småstad är inga brott för små för att anmälas</p>

<p>Fyll i formuläret nedan, alla rutor markerade med stjärna (*) måste fyllas i.</p>

<form method="post" asp-controller="Home" asp-action="Index">
    <p>
        <input type="hidden" asp-for="IsSubmitted" value="true" />
    </p>
    <p>
        <label asp-for="Place" class="label" ></label>
        <input asp-for="Place"/>
        <span asp-validation-for="Place" class="error"></span>
    </p>
    <p>
        <label asp-for="TypeOfCrime" class="label"></label>
        <input asp-for="TypeOfCrime" />
        <span asp-validation-for="TypeOfCrime" class="error"></span>
    </p>
    <p>
        <label asp-for="DateOfObservation" class="label"></label>
        <input asp-for="DateOfObservation" />
        <span asp-validation-for="DateOfObservation" class="error"></span>
    </p>
    <p>
        <label asp-for="InformerName" class="label"></label>
        <input asp-for="InformerName" />
        <span asp-validation-for="InformerName" class="error"></span>
    </p>
    <p>
        <label asp-for="InformerPhone" class="label"></label>
        <input asp-for="InformerPhone" />
        <span asp-validation-for="InformerPhone" class="error"></span>
    </p>
    <p>
        <label asp-for="Observation" class="label"></label>
        <br />
        <textarea asp-for="Observation" rows="5" cols="16"></textarea>
    </p>
    <p>
        <input class="button" type="submit" value="Skicka in" />
    </p>
</form>
